{
  "version": "0.0.1",
  "name": "match.flow",
  "description": "Poor man's pattern matching in flow",
  "keywords": [
    "match.flow",
    "typed",
    "flow",
    "redux",
    "reducer",
    "pattern matching",
    "pattern",
    "tagged unions",
    "disjoint unions"
  ],
  "main": "lib/match",
  "module": "src/match",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (http://jeditoolkit.com)",
  "repository": "https://github.com/Gozala/match.flow",
  "license": "MIT",
  "devDependencies": {
    "alias-quokka-plugin": "^0.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-flow-node": "^1.0.2",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "documentation": "^5.3.1",
    "flow-bin": "^0.61.0",
    "flow-copy-source": "^1.2.1",
    "husky": "^0.14.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "scripts": {
    "test": "npm run test:flow && npm run test:tape",
    "test:tape": "blue-tape -r babel-register 'test/**/*.js'",
    "test:flow": "flow check",
    "build:clear": "rm -rf lib",
    "build:types": "flow-copy-source --verbose src lib",
    "build:node": "babel --out-dir lib src",
    "build:api": "documentation readme --section=API src/match.js",
    "build:docs":
      "documentation build --document-exported src/** -f html --o docs",
    "build": "npm run build:node && npm run build:types",
    "prepublish": "npm run build && npm test",
    "precommit": "lint-staged",
    "start":
      "flow-copy-source --watch --verbose src lib & babel --watch --out-dir lib src"
  },
  "lint-staged": {
    "*.js": ["prettier --parser flow --no-semi --write", "git add"]
  },
  "quokka": {
    "alias": {
      "match.flow": "src/match"
    },
    "pro": true,
    "babel": true,
    "plugins": ["alias-quokka-plugin"]
  }
}
